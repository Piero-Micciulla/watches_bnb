<div class="navbar navbar-expand-sm navbar-light navbar-lewagon navbar-dark bg-dark">
  <%= link_to root_path, class: "navbar-brand" do %>
    <%= image_tag "logo.png", :class => "style-logo" %>
    <% end %>

  <%= form_tag watches_path, method: :get do %>
    <div class = "index-wrap search-bar-main">
    <%= text_field_tag :query,params[:query],class: "form-control search-bar-main",placeholder: "#{params[:query]}"%>
    <i class="fas fa-stopwatch mr-2" style="color: #B0ACAD;"> </i>
  </div>
  <% end %>

  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>

  <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <% if user_signed_in? %>
         <div class="items-menu-bar d-flex align-items-center">
          <%= link_to dashboard_path do %>
            <i class="fas fa-home fa-2x" style="padding-top:10px"></i>
          <% end %>
          <div class="dropdown dashboard-home">
            <button class="btn btn-secondary dropdown-toggle user-icon" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
              <%= image_tag "https://kitt.lewagon.com/placeholder/users/ssaunier", class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
            </button>
            <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
              <a class="dropdown-item" href="#">Payment Info</a>
              <a class="dropdown-item" href="#">Account Setting</a>
              <%= link_to destroy_user_session_path, method: :delete, class: "dropdown-item" do %>
                <i class="fas fa-sign-out-alt"></i>
              <% end %>
            </div>
          </div>
        </div>
      <% else %>
          <%= link_to "Login", new_user_session_path, class: "nav-link" %>
      <% end %>
    </div>
  </div>
