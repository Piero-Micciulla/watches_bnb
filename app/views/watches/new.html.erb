 <div class="new-watch-body">
  <div class="new-container w-50 ">
    <div class="new-watch  ">
      <div class="card-body">
          Add a new watch
      <%= simple_form_for @watch do |f| %>
                <%= f.input :brand %>
                <%= f.input :description %>
                <%= f.input :photos, as: :file %>
                <%= f.submit "Submit", class: "btn btn-dark  w-25" %>
              <% end %>
      </div>
    </div>
  </div>
</div>
